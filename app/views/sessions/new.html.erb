<h1>Login</h1>
<%= form_for(:user, url: sessions_path) do |f| %>
    <div class="field">
      <%= f.label :email %> <br/> <%= f.text_field :email %>
    </div>
    <p/>
    <div class="field">
      <%= f.label :password %> <br/>
      <%= f.password_field :password %> </div>
    <p/>
    <div class="actions">
      <%= f.submit "Login" %> </div>
<% end %>